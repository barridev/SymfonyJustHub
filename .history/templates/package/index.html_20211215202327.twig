{% extends 'base.html.twig' %}

{% block title %}Liste des colis{% endblock %}

{% block body %}

    {# <a href="{{ path('package_create', {'id': package.id}) }}">Créer un colis</a> #}

    <table class="table bordered">
        <tr>
            <td>#</td>
            <td>Client</td>
            <td>Expéditeur</td>
            <td>Status</td>
            <td>Point relais</td>
            <td>Casier</td>
            <td>Poids</td>

        </tr>

        {% for package in packages %}
            <tr>
                <td>{{ package.id }}</td>
                <td>{{ package.customer.name }}</td>
                <td>{{ package.sender.id }}</td>
                <td>{{ package.status|join(', ') }}</td>
                <td>{{ package.hub.adress }}</td>
                <td>{{ package.locker.id }}</td>
                <td>{{ package.weight }}</td>
                <td>
                    {# <a href="{{ path('package_show', {'id': book.id}) }}">Voir</a> #}
                    <a href="{{ path('package_edit', {'id': package.id}) }}">Modifier</a>
                    <a href="{{ path('package_delete', {'id': package.id, 'token': csrf_token('delete_package')}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
